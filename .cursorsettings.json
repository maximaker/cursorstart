{
  "editor": {
    "formatOnSave": true,
    "defaultFormatter": "prettier",
    "tabSize": 2,
    "insertSpaces": true,
    "rulers": [80, 100],
    "wordWrap": "off",
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true,
    "codeActionsOnSave": {
      "source.fixAll": true,
      "source.organizeImports": true
    }
  },
  "ai": {
    "enabled": true,
    "autoComplete": {
      "enabled": true,
      "language": {
        "typescript": true,
        "javascript": true,
        "typescriptreact": true,
        "javascriptreact": true
      },
      "threshold": 0.7
    },
    "codeAnalysis": {
      "enabled": true,
      "suggestions": true,
      "security": true,
      "performance": true,
      "accessibility": true
    },
    "documentation": {
      "enabled": true,
      "generateComments": true,
      "style": "jsdoc"
    },
    "pairProgramming": {
      "enabled": true,
      "mode": "collaborative",
      "contextAwareness": true
    },
    "snippets": {
      "enabled": true,
      "customization": true,
      "shareableSnippets": true
    }
  },
  "typescript": {
    "suggestionActions": {
      "enabled": true
    },
    "preferences": {
      "importModuleSpecifier": "non-relative",
      "quoteStyle": "single"
    },
    "validate": {
      "enable": true
    }
  },
  "javascript": {
    "format": {
      "semicolons": true,
      "singleQuote": true
    }
  },
  "files": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/.next": true,
      "**/coverage": true,
      "**/.git": true,
      "**/.DS_Store": true
    },
    "watcherExclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/.next": true,
      "**/.git": true
    },
    "associations": {
      "*.tsx": "typescriptreact",
      "*.jsx": "javascriptreact",
      "*.mdx": "markdown"
    }
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/.next": true,
      "**/coverage": true,
      "**/.git": true
    },
    "quickOpen": {
      "includeSymbols": true,
      "includeHistory": true
    }
  },
  "git": {
    "enabled": true,
    "autofetch": true,
    "confirmSync": true,
    "smartCommit": true,
    "branchProtection": true
  },
  "terminal": {
    "integrated": {
      "defaultProfile": {
        "windows": "PowerShell",
        "linux": "bash",
        "osx": "zsh"
      },
      "fontSize": 14,
      "lineHeight": 1.2,
      "cursorStyle": "line",
      "cursorBlinking": true
    }
  },
  "workbench": {
    "iconTheme": "material-icon-theme",
    "colorTheme": "GitHub Dark Default",
    "tree": {
      "indent": 20,
      "renderIndentGuides": true
    },
    "editor": {
      "minimap": {
        "enabled": true,
        "showSlider": "always"
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "auto"
  },
  "eslint": {
    "run": "onSave",
    "validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
    "packageManager": "npm",
    "codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "tailwindCSS": {
    "validate": true,
    "lint": {
      "cssConflict": "warning",
      "invalidApply": "error",
      "invalidScreen": "error",
      "invalidVariant": "error",
      "invalidConfigPath": "error",
      "invalidTailwindDirective": "error"
    },
    "experimental": {
      "classRegex": ["class: '([^']*)'"]
    }
  },
  "accessibility": {
    "validate": true,
    "level": "AA",
    "rules": {
      "aria-required": true,
      "color-contrast": true,
      "keyboard-navigation": true
    }
  }
} 